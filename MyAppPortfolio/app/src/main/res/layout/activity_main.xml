<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/button01"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:background="#F08C35"
            android:singleLine="false"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/button02"
            android:layout_below="@+id/button01"
            android:layout_alignLeft="@+id/button01"
            android:layout_alignStart="@+id/button01"
            android:layout_alignRight="@+id/button01"
            android:layout_alignEnd="@+id/button01"
            android:background="#F08C35"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/button03"
            android:layout_below="@+id/button02"
            android:layout_alignRight="@+id/button02"
            android:layout_alignEnd="@+id/button02"
            android:layout_alignLeft="@+id/button02"
            android:layout_alignStart="@+id/button02"
            android:background="#F08C35"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button04"
            android:layout_below="@+id/button03"
            android:layout_alignLeft="@+id/button03"
            android:layout_alignStart="@+id/button03"
            android:layout_alignRight="@+id/button03"
            android:layout_alignEnd="@+id/button03"
            android:background="#F08C35"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:id="@+id/button05"
            android:layout_below="@+id/button04"
            android:layout_alignLeft="@+id/button04"
            android:layout_alignStart="@+id/button04"
            android:layout_alignRight="@+id/button04"
            android:layout_alignEnd="@+id/button04"
            android:background="#F08C35"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CAPTSTONE: MY OWN APP"
            android:id="@+id/button06"
            android:background="#fff02735"
            android:textColor="#ffffffff"
            android:layout_below="@+id/button05"
            android:layout_alignLeft="@+id/button05"
            android:layout_alignStart="@+id/button05"
            android:layout_alignRight="@+id/button05"
            android:layout_alignEnd="@+id/button05"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

</RelativeLayout>
